<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hebe.mapper.TodoMapper">
    <select id="selTodoList" resultType="TodoDTO">
        SELECT * FROM todo;
    </select>

    <select id="dayTodoList" resultType="TodoDTO">
        SELECT * FROM todo WHERE regdt = #{regdt} ;
    </select>

    <select id="calList" resultType="TodoDTO">
        SELECT DISTINCT regdt from todo WHERE MONTH(regdt)= #{month};
    </select>

    <select id="monthdata" resultType="CalendarDTO">
        SELECT DISTINCT DAY(regdt) as month from todo WHERE MONTH(regdt)=#{month};
    </select>


    <insert id="insTodoList">
        insert into todo (t_board,t_text,done,regdt) values (#{t_board},#{t_text},#{done},#{regdt});
    </insert>

    <delete id="delTodoList">
        DELETE FROM todo
    </delete>
</mapper>